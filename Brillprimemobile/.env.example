
# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Security Secrets (generate random 32+ character strings)
JWT_SECRET=your-jwt-secret-key-here-32-characters-minimum
SESSION_SECRET=your-session-secret-key-here-32-characters-minimum

# Optional: Payment Integration
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Optional: CORS Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Optional: Redis (disabled by default)
REDIS_DISABLED=true
