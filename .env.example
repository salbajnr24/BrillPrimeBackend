# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# JWT Configuration
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
JWT_REFRESH_SECRET_KEY=your-secure-jwt-refresh-secret-key-here

# Server Configuration
PORT=10000
NODE_ENV=production

# Email Configuration (Optional - for OTP and notifications)
NO_REPLY_USER_EMAIL=noreply@yourdomain.com
NO_REPLY_USER_PASSWORD=your_email_password
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your_email_app_password

# OAuth Configuration (Optional - for social authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Frontend URL (for CORS and OAuth callbacks)
FRONTEND_URL=https://yourdomain.com

# Redis Configuration (Optional - for caching)
REDIS_CLIENT_NAME=brillprime
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_PASSWORD=your_redis_password
REDIS_USERNAME=your_redis_username